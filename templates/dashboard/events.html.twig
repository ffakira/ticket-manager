{% extends 'base.html.twig' %}

{% block title %}
	eventbits | Create Event
{% endblock %}

{% block body %}
	<main class="container">
		<h1>Create Event</h1>
		<p>Fill in the form below to create an event.</p>
		{{ form_start(form) }}
		<div class="form-group mb-4">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
			{{ form_errors(form.name) }}
		</div>
		<div class="form-group mb-4">
			{{ form_label(form.location) }}
			{{ form_widget(form.location) }}
			{{ form_errors(form.location) }}
		</div>
		<div class="form-group mb-4">
			{{ form_label(form.description) }}
			{{ form_widget(form.description) }}
			{{ form_errors(form.description) }}
		</div>
		<div class="form-group row mb-4">
			<div class="col-6">
				{{ form_label(form.startDate) }}
				{{ form_widget(form.startDate) }}
				{{ form_errors(form.startDate) }}
			</div>
			<div class="col-6">
				{{ form_label(form.endDate) }}
				{{ form_widget(form.endDate) }}
				{{ form_errors(form.endDate) }}
			</div>
		</div>
		<div class="form-group row mb-2">
			<div class="col-6">
				{{ form_label(form.startTime) }}
				{{ form_widget(form.startTime) }}
				{{ form_errors(form.startTime) }}
			</div>
			<div class="col-6">
				{{ form_label(form.endTime) }}
				{{ form_widget(form.endTime) }}
				{{ form_errors(form.endTime) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_row(form.save)}}
		</div>
		{{ form_end(form)}}
	</main>
{% endblock %}
